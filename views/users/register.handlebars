{{#each errors}}
<div class='alert alert-danger'>{{text}}</div>
{{else}}
{{/each}}



<div class='row'>   
    <div class="col-md-6 mx-auto">
        <div class='card card-body'>
            <h3 class='text-center'>Account Register</h3>
            <form action="/users/register" method="post">
            <div class="form-group">
                    <label for="name">Name</label>
                    <input value="{{name}}" type="name" class="form-control" name="name" required>
                </div>
                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input value="{{email}}"type="email" class="form-control" name="email" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input value="{{password}}" type="password" class="form-control" name="password" required></input>
                </div>
                <div class="form-group">
                    <label for="password2">Re-type Password</label>
                    <input value="{{password2}}" type="password" class="form-control" name="password2" required></input>
                </div>
                <button type="submit" class="btn btn-primary">Log In</button>
            </form>
        </div>
    </div>
</div>